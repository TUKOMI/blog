<div id="header">
	<div class="logo-cell">
		<span class="logo skrollable rendered"
			data--10="top:10px"
			data-600="top:32px">
			<%=image_tag("airscrew.png") %>
		</span>
	</div>
	<div class="tringle-bar"
		data--10="top:-190px;"
		data-350="top:-150px;">
		<%=image_tag("tringle-top.png") %>
	</div>
	<div class="plane"
		data-300="top: -10px; transform[bounce]:scale(0.4); opacity: 1;"
		data-1000="top:1000px;transform[bounce]:scale(1.5); opacity: 1;"
		data-1300="top:1000px;transform[bounce]:scale(1.5); opacity: 0;">
		<%=image_tag("air-top.svg") %>
		<span class="airscrew"></span>
	</div>
	<div class="tringle-back">
		<%=image_tag("tringle-top.svg") %>
	</div>
	<div class="self-box"
		data-0="top: 0px; "
		data-400="top: -60px;">
		<div class="self-cnt"
			data-0="top: 300px; opacity: 1;"
			data-400="top: 400px; opacity: 0.6;"
			data-1200="top: 420px; opacity: 0;">
			<div class="cnt-bg"></div>
			<div class="photo-box">
				<%=image_tag("logo-self.png", class: "photo") %>
			</div>
			<div class="who-am-i">
				<h2><%= Admin.last.name %></h2>
				<h3>正在起飞的前端工程师</h3>
				<p>
					<a href="mailto:<%= Admin.last.email%>" class="strang email">EMAIL</a>
				</p>
			</div>
		</div>
		<div class="road-box">
			<div class="road-line"
				data-140="top: 0px;"
				data-2000="top: -4000px;"></div>
		</div>
		<%=image_tag("tringle-large-top.png", class: "bottom") %>

	</div>
	<div class="about-me"
		data-300="top: -800px;"
		data-1000="top: -50px;">
		<ul>
			<li><span>姓名&nbsp;|&nbsp;</span><%= Admin.first.name %></li>
			<li><span>手机&nbsp;|&nbsp;</span><%= Admin.first.phone %></li>
			<li><span>邮箱&nbsp;|&nbsp;</span><a href="mailto:<%= Admin.last.email%>"><%= Admin.last.email%></a></li>
			<li><span>博客&nbsp;|&nbsp;</span><a href="<%= Admin.first.blog_url %>">欢迎猛击</a></li>
			<li><span>教育背景&nbsp;|&nbsp;</span><%= Admin.first.edu_info %></li>
			<% if false %>
			<li><span>GitHub&nbsp;|&nbsp;</span><a href="<%= Admin.first.github_url%>">欢迎猛击</a></li>
			<% end %>

		</ul>
		<%=image_tag("about-me-bottom.png", class: "bottom") %>
	</div>
</div>

<script>

	var scrollObj = skrollr.init({
		  //跟smoothScrolling的功能，主要都是讓scroll事件不要這麼敏感，動畫才不會看起來卡卡的。
		  smoothScrolling : true,
		  smoothScrollingDuration:200,

	});
	var $email = $('.email');
	$email.on("mouseenter", function(){
		$email.fadeOut("slow","swing",function(){
			$email.text("yundong.me@gmail.com");
			$email.fadeIn("slow","swing");
		});
	});
	$email.on("mouseout", function(){
		$email.fadeOut("slow","swing",function(){
			$email.text("EMAIL");
			$email.fadeIn("slow","swing");
		});
	});
</script>